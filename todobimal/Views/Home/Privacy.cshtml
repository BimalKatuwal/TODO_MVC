@{
    Layout = "../Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Privacy Policy";
}

@model todobimal.Models.TasksList;

<h1>Implementing tag helpers</h1>
<form asp-controller="Home" asp-action="Privacy" method="POST">

    <input type="hidden" asp-for="Id" />

 <div class="form-group">
 <label asp-for="Task">Task</label>
 <input asp-for="Task" class="form-control" id="task" name ="task" ariadescribedby="TaskHelp" placeholder="Enter your task">
 </div>
 <div class="form-group">
 <label asp-for="Description">Description</label>
 <input asp-for="Description" class="form-control" id="description" name = "description" ariadescribedby="DescriptionHelp" placeholder="Enter description of your tasks">
 </div>
 <div class="form-group">
 <label asp-for="Status">Status</label>
 <input asp-for="Status" class="form-control" id="status" name="status" ariadescribedby="StatusHelp" placeholder="Enter status of your task">
 </div>
 <button type="submit" class="btn btn-primary">Submit</button>
</form>







